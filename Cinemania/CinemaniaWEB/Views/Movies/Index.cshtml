@model IEnumerable<CinemaniaAPI.Models.DTO.MovieDTO>

@{
    ViewData["Title"] = "Index";
}

    <div>
        <h1 class="float-left">List of All Movies</h1>

        <p class="float-right">
            <a asp-controller="Movies" asp-action="AddMovie" class="btn btn-primary">Add New Movie</a>
        </p>
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @Html.HiddenFor(modelItem => item.Id)
        <tr>
            <td>
                @{
                    var base64 = Convert.ToBase64String(item.Cover);
                    var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@finalStr" width="50" height="50" alt="cover" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actors)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditMovie", new { id = item.Id })
                @Html.ActionLink("Details", "MovieDetails", new { id = item.Id })
                @Html.ActionLink("Delete", "DeleteMovie", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>

@model CinemaniaAPI.Models.DTO.MovieDTO

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container">
    <div class="row">
        <div class="col-5">
            @{
                var base64 = Convert.ToBase64String(Model.Cover);
                var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
            }

            <img src="@finalStr" width="400" height="600" alt="cover" />
        </div>
        <div class="col-6">
            <div class="text-center">
                <h1>@Html.DisplayFor(model => model.Title)</h1>
            </div>

            <br /><br /><br />

            <div>
                <dl class="row">
                    @Html.HiddenFor(model => model.Id)

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Genre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Genre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Rating)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Rating)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LengthMin)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LengthMin)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReleaseYear)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ReleaseYear)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Director)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Director)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Actors)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Actors)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
            </div>

            <br /><br /><br />

                        <div class="text-center">
                            @if (User.IsInRole("Administrator"))
                            {
                                @Html.ActionLink("Edit Movie", "EditMovie", new { id = Model.Id })
                                @Html.ActionLink("Delete Movie", "DeleteMovie", new { id = Model.Id })
                            }
                                <a asp-controller="Movies" asp-action="Index">Back to Movies</a>
                            </div>

        </div>
    </div>
</div>








@model IEnumerable<CinemaniaAPI.Models.DTO.MovieDTO>

@{
    ViewData["Title"] = "Top Movies";
}

        @{int i = 1; }




<h1>Top Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Rank
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                @Html.HiddenFor(modelItem => item.Id)
                <tr>
                    <td>
                        @{@i}
                    </td>
                    <td>
                        @{
                            var base64 = Convert.ToBase64String(item.Cover);
                            var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img src="@finalStr" width="75" height="100" alt="cover" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LengthMin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actors)
                    </td>
                </tr>
                @(i++)
            }
          }
    </tbody>
</table>





@model IEnumerable<CinemaniaAPI.Models.DTO.MovieDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center bg-transparent">
    <h1>Welcome to Cinemania</h1>
    <h3>Newest Movies</h3>
</div>

<div>
    <div class="float-left">
        <a asp-action="AddMovie" asp-controller="Movies" class="btn btn-outline-dark createBtn">Add New Movie</a>
    </div>

    <div class="float-right">
        <form asp-action="Index" asp-controller="Movies" method="get">
            <input type="text" name="search" class="btn btn-outline-dark" />
            <input type="submit" value="Search" class="btn btn-outline-dark" />
        </form>
    </div>
</div>

<br />
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @Html.HiddenFor(modelItem => item.Id)
            <tr>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Cover);
                        var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                    }
                    <a href="~/movies/moviedetails/@item.Id">
                        <img src="@finalStr" width="75" height="100" alt="cover" />
                    </a>
                </td>
                <td>
                    <a href="~/movies/moviedetails/@item.Id">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LengthMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actors)
                </td>
            </tr>
        }
    </tbody>
</table>


@{
    ViewData["Title"] = "Index";
}


<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h1 class="text-dark">City List</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-warning text-dark border-dark"><i class="fas fa-plus"></i> &nbsp; Add New City</a>
        </div>
    </div>
    <br />
    <br />
    <div >
        <table id="myTable" class="table table-striped" style="width:100%;">
            <thead class="bg-dark text-warning">
                <tr>
                    <th>City</th>
                    <th>Country</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/cities.js"></script>
}


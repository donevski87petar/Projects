
@{
    ViewData["Title"] = "Index";
}


<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Country List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn bg-primary text-white"><i class="fas fa-plus"></i> &nbsp; Add New Country</a>
        </div>
    </div>
    <br />
    <br />
    <div>
        <table id="myTable" class="table table-striped" style="width:100%">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Name</th>
                    <th>Capital</th>
                    <th>Region</th>
                    <th>Area</th>
                    <th>Population</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/countries.js"></script>
}
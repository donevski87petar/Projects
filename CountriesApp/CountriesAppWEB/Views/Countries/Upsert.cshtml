@model CountriesAppWEB.Models.Country

@{ 
    var title = "Add Country";
}


    <form method="post" asp-action="Upsert" enctype="multipart/form-data">

        @*validation summary*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row px-2 mx-2">

            @if (Model.Id != 0)
            {
                <input type="hidden" asp-for="Id" />
                title = "Edit Country";
            }


            <div class="col-12 p-3">
                <h1 class="text-dark">@title</h1>
            </div>
            <div class="col-8">

                @*ROW*@
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="Name" class="border-dark form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                @*ROW*@

                @*ROW*@
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Capital"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="Capital" class="border-dark form-control" />
                        <span asp-validation-for="Capital" class="text-danger"></span>
                    </div>

                </div>
                @*ROW*@

                @*ROW*@
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Region"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="Region" class="border-dark form-control" />
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>

                </div>
                @*ROW*@



                @*ROW*@
                <div class="form-group row">

                    <div class="col-4">
                        <label for="Flag"></label>
                    </div>

                    <div class="col-8">
                        <input type="file" asp-for="Flag" id="countryFlag" name="files" class="form-control" />

                    </div>

                </div>
                @*ROW*@



                <div class="form-group row">
                    <div class="col-4 offset-4">
                        <button type="submit" class="btn btn-warning text-dark form-control">
                            @(Model.Id != 0? "Update" : "Add")
                        </button>
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-warning text-dark form-control">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="col-4 text-right" style="width:250px;">
                @if (Model.Flag != null)
                {
                    var base64 = Convert.ToBase64String(Model.Flag);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src="@imgsrc" width="100" />
                }
            </div>
        </div>

    </form>


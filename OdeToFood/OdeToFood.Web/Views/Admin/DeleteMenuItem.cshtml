@model OdeToFood.Domain.Models.MenuItem

@{
    ViewBag.Title = "Delete Menu Item";
}

    <div class="text-center">
        <h2 class="text-center">Delete Menu Item</h2>

        <h3 class="text-center">Are you sure you want to delete this?</h3>

        <br />

        <div>

            @if (Model.ImagePath != null)
            {
                <img style="width:400px;" src="@Url.Content(Model.ImagePath)" alt="Menu Item logo">
            }
            else
            {
                <img style="width:400px;" src="~/Images/NoPhoto.jpg" alt="Menu Item logo">
            }

            <br />

            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.MenuItemName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MenuItemName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MenuItemType)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MenuItemType)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                </dl>
            </div>

            <div class="text-center">
                @Html.ActionLink("Back to List", "IndexRestaurant")

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </div>
                }

            </div>

        </div>
    </div>







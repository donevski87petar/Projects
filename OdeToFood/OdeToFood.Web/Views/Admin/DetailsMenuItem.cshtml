@model OdeToFood.Domain.Models.MenuItem

@{
    ViewBag.Title = "MenuItemDetails";
}

<h1 class="text-center">Details for @Model.MenuItemName</h1>
<h5 class="text-center">@Model.Restaurant.RestaurantName</h5>

<br />

@if (Model.ImagePath != null)
{
    <img style="width:400px;" src="@Url.Content(Model.ImagePath)" alt="Card image cap">
}
else
{
    <img style="width:400px;" src="~/Images/NoPhoto.jpg" alt="Card image cap">
}


<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MenuItemName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MenuItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isPromoted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isPromoted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cuisine.CuisineName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cuisine.CuisineName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.RestaurantName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditMenuItem", new { id = Model.MenuItemId }) |

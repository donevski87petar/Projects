@model OdeToFood.Domain.ViewModels.RestaurantDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h1 class="text-center">@Model.Restaurant.RestaurantName</h1>
<h5 class="text-center">@Model.Restaurant.Cuisine.CuisineName</h5>

<h3 class="text-center">Promoted items:</h3>

<div class="row">
    @foreach (var item in Model.MenuItems)
    {
        if (item.isPromoted == true)
        {
            <div class="card" style="width: 14rem;height:20rem; margin:auto;">
                @if (item.ImagePath != null)
                {
                    <img class="card-img-top" src="@Url.Content(item.ImagePath)" alt="Card image cap">
                }
                else
                {
                    <img class="card-img-top" src="~/Images/NoPhoto.jpg" alt="Card image cap">
                }
                <div class="card-body text-center">
                    <h5 class="card-text"><a href="~/MenuItems/Details/@item.MenuItemId">@item.MenuItemName</a></h5>
                </div>
            </div>
        }
    }
</div>

<h3 class="text-center">All items:</h3>

<div class="row">
    @foreach (var item in Model.MenuItems)
    {
            <div class="card" style="width: 14rem;height:20rem; margin:auto;">
                @if (item.ImagePath != null)
                {
                    <img class="card-img-top" src="@Url.Content(item.ImagePath)" alt="Card image cap">
                }
                else
                {
                    <img class="card-img-top" src="~/Images/NoPhoto.jpg" alt="Card image cap">
                }
                <div class="card-body text-center">
                    <h5 class="card-text"><a href="~/MenuItems/Details/@item.MenuItemId">@item.MenuItemName</a></h5>
                </div>
            </div>
    }
</div>

@model IEnumerable<RestaurantApp.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info">Create New</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Subcategory.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Subcategory.Name)
                </td>
                <td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                            Edit
                        </a>

                        <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@item.Id">
                            Details
                        </a>

                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No Menu Item exists...</p>
        }
    </div>
</div>

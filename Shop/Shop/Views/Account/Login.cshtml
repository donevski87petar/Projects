@model Shop.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


@*<script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js">
    </script>*@


<br /><br />

    <div class="row">

        <div class="col-4"></div>
        
        <div class="col-4 border border-dark">

            <br />

            <h1 class="text-center"><i class="fa fa-user" aria-hidden="true"></i> Login</h1>
            
            <br />

            <form asp-controller="Account" asp-action="Login" method="post">
                <table>
                    <tr>
                        <td><label asp-for="UserName"></label></td>
                        <td><input asp-for="UserName" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Password"></label></td>
                        <td><input asp-for="Password" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="RememberMe"></label></td>
                        <td><input asp-for="RememberMe" /></td>
                    </tr>
                    <tr>
                        <td colspan="2"><br /><input class="btn btn-primary" type="submit" value="Login" /></td>
                    </tr>
                </table>
                <div asp-validation-summary="All"></div>
            </form>

            <br />

        </div>

        <div class="col-4"></div>
    </div>
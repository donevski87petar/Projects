@model Shop.ViewModels.AppUserViewModel

@{
    ViewData["Title"] = "MyProfile";
}


    <div class="row">

        <div class="col-12 card" style="padding:0px;margin-top:15px;overflow:hidden;">

            <div class="card-header bg-warning box-shadow">
                <h1 class="text-center"><i class="fa fa-user" aria-hidden="true"></i> My Profile</h1>
            </div>

            <br /><br />

            <table class="table table-striped">
                <thead>
                    @Html.HiddenFor(model => model.Id)
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AppRole)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                        <td>
                            @Model.BirthDate.ToShortDateString()
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.AppRole)
                        </td>
                    </tr>
                </tbody>
            </table>

            <br />

            <a class="btn btn-primary" style="width:200px;margin:auto;" asp-controller="Account" asp-action="UpdateUser" 
               asp-route-id="@Model.Id"><i class="fas fa-user-edit"></i> Update Profile</a> 
            
            <br />

        </div>
    </div>

<div class="text-center">
    <a asp-controller="Home" asp-action="Index"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back  </a>
</div>

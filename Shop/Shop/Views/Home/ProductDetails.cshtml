@model Shop.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Product Details";
}

    <h1 class="text-center">@Html.DisplayFor(model => model.Brand) @Html.DisplayFor(model => model.ModelName)</h1>

<hr />

<br />

<div class="text-center">
    @{
        if (Model.Images.Count > 0)
        {
            foreach (var img in Model.Images)
                {
                    var base64 = Convert.ToBase64String(img.Photo);
                    var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src="@finalStr" width="350" />
                }
        }
        else
        {
            <img src="~/Images/no_image.png" width="350" />
        }
    }
</div>

<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
            @*<select name="number">
                <option value="">Select size</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $ @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Add to cart
        </dt>
        <dd class="col-sm-10">
            <form asp-action="AddToShoppingCart"
                  asp-controller="ShoppingCart"
                  asp-route-id="@Model.ProductId"
                  method="post">

                <button class="cartButton"><i class="fa fa-shopping-cart" aria-hidden="true"></i></button>
            </form>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
</div>


@{ ViewData["Title"] = "Checkout Complete"; }





    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 card" style="padding:0px;margin-top:15px;overflow:hidden;">

            <div class="text-center" id="loadingDiv">
                <br /><br /><br /><br /><br /><br /><br />
                <div class="row" style="justify-content: center">
                    <img src="~/Images/loading-gif.gif" width="100" id="loadingGif" />
                </div>
                <br /><br /><br /><br /><br /><br /><br />
            </div>

            <div class="checkoutComplete">
                <div class="card-header box-shadow bg-warning">
                    <h1 class="text-center"><i class="fa fa-check" aria-hidden="true"></i> Order Accepted !</h1>
                </div>

                <br /><br /><br /><br /><br /><br /><br />

                <h3 class="text-center">
                    <a href="/Order/myOrders">Click here to checkout your order details!</a>
                </h3>

                <br /><br /><br /><br /><br /><br /><br />
            </div>

        </div>
        <div class="col-3"></div>
    </div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
$(document).ready(function () {

    $(".checkoutComplete").hide();

        setTimeout(function () {
            $("#loadingDiv").hide();
            $(".checkoutComplete").show();
        }, 1500);


    })</script>

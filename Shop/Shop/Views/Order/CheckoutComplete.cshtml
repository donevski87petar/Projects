
@{ ViewData["Title"] = "Checkout Complete"; }





    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 card">

            <div class="text-center" id="loadingDiv">
                <br /><br /><br /><br /><br /><br /><br />
                <div class="row" style="justify-content: center">
                    <img src="~/Images/loading-gif.gif" width="100" id="loadingGif" />
                </div>
                <br /><br /><br /><br /><br /><br /><br />
            </div>

            <br />

            <div class="checkoutComplete">
                <h1 class="text-center">Order Accepted</h1>

                <br /><br /><br /><br /><br /><br /><br />

                <h5 class="text-center">
                    <a href="/Order/myOrder">Click here to checkout your order details!</a>
                </h5>

                <br /><br /><br /><br /><br /><br /><br />
            </div>

        </div>
        <div class="col-3"></div>
    </div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
$(document).ready(function () {

    $(".checkoutComplete").hide();

        setTimeout(function () {
            $("#loadingDiv").hide();
            $(".checkoutComplete").show();
        }, 1500);


    })</script>

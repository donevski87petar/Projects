@model Shop.ViewModels.ProductImageViewModel

@{
    ViewData["Title"] = "DeleteProductImage";
}



<div class="row">

    <div class="col-2"></div>

    <div class="col-8 card" style="padding:0px;margin-top:15px;overflow:hidden;">

        <div class="card-header box-shadow bg-warning">
            <h1 class="text-center">Delete Product Image ?</h1>
        </div>

        <br />

        <div class="text-center">
            @Html.HiddenFor(model => model.Product.ProductId)
            @{
                var base64 = Convert.ToBase64String(@Model.Photo);
                var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@finalStr" width="600" />
            }
        </div>

        <br />
        <br />

        <div class="text-center">
            <form asp-action="DeleteProductImage">
                <input type="hidden" asp-for="ImageId" />
                <input type="submit" value="Delete" class="btn btn-danger" style="width:200px;" />
            </form>
        </div>

        <br />

    </div>

    <div class="col-md-2"></div>

</div>

<div class="text-center">
    <a asp-controller="Products" asp-action="AllProducts"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>
</div>
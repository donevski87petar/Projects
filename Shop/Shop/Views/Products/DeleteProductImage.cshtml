@model Shop.ViewModels.ProductImageViewModel

@{
    ViewData["Title"] = "DeleteProductImage";
}

<h1 class="text-center">Delete Product Image</h1>

<hr />

<div class="row">

    <div class="col-md-3"></div>

    <div class="col-md-6 text-center">

            @Html.HiddenFor(model => model.Product.ProductId)
            @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Photo)
            </dt>*@

                @{
                    var base64 = Convert.ToBase64String(@Model.Photo);
                    var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src="@finalStr" width="200" height="200" />
                }

        <br />
        <br />

        <form asp-action="DeleteProductImage">
            <input type="hidden" asp-for="ImageId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Products" asp-action="AllProducts">Back to List</a>
        </form>
    </div>

    <div class="col-md-3"></div>

</div>

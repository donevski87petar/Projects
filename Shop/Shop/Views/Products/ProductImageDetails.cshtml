@model Shop.ViewModels.ProductImageViewModel

@{
    ViewData["Title"] = "Product Image Details";
}

<h1 class="text-center">Product Image Details</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            @{
                var base64 = Convert.ToBase64String(@Model.Photo);
                var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@finalStr" width="200" height="200" />
                <br />
                <a asp-controller="Products" asp-action="DeleteProductImage" asp-route-id="@Model.ImageId">Delete Image</a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ModelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ModelName)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="AllProducts">Back to List</a>
</div>

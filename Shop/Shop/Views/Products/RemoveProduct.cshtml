@model Shop.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "RemoveProduct";
}

<h1 class="text-center">Remove Product</h1>

<hr />

<div class="text-center">
    @{
        foreach (var img in Model.Images)
        {
            @if (img != null)
            {
                var base64 = Convert.ToBase64String(img.Photo);
                var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@finalStr" width="200" height="200" />
            }
        }
    }
</div>

<br />
<br />

<div class="row">

    <div class="col-sm-4"></div>

    <div class="col-sm-4">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.ProductType)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.ProductType)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.ModelName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.ModelName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Size)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Size)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>

        <form asp-action="RemoveProduct">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <br />
            <a asp-action="AllProducts">Back to List</a>
        </form>
    </div>

    <div class="col-sm-4"></div>

</div>

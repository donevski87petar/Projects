@model Shop.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "RemoveProduct";
}



<div class="row">

    <div class="col-2"></div>

    <div class="col-8 card">

        <br />

        <h1 class="text-center">Delete Product ?</h1>

        <hr />
        <div class="text-center">
            @{
                foreach (var img in Model.Images)
                {
                    @if (img != null)
                    {
                        var base64 = Convert.ToBase64String(img.Photo);
                        var finalStr = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@finalStr" class="magniflier" width="200" height="200" />
                    }
                }
            }
        </div>

        <br />

        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ModelName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModelName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    $ @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
        </div>

        <br />

        <form asp-action="RemoveProduct" class="text-center">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" style="width:35%;" />
            <br />
        </form>

        <br />

    </div>

    <div class="col-2"></div>

</div>

<div class="text-center">
    <a asp-controller="Products" asp-action="AllProducts">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
    </a>
</div>

@model IEnumerable<Shop.ViewModels.AppUserViewModel>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "AllUsers";
}

    <div class="row">

        <div class="col-12 card">

            <br />

            <h1 class="text-center"><i class="fa fa-lock" aria-hidden="true"></i> All Users</h1>

            <hr />

            <div>
                <a asp-action="AddUser" class="btn btn-primary" style="width:150px;">Add New User</a>
                <h4 class="float-right">Total users : @ViewBag.UsersCount</h4>
            </div>

            <br />

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @Html.HiddenFor(modelItem => item.Id)
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @item.BirthDate.ToShortDateString()
                            </td>
                            <td>
                                <a asp-controller="Users" asp-action="UserDetails" asp-route-id="@item.Id"><i class="fa fa-info" aria-hidden="true"></i> Details</a>
                                <br />
                                <a asp-controller="Users" asp-action="RemoveUser" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>


@*Pagination*@
<div class="row" style="justify-content:center">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("AllUsers", new { page = page }),
        new X.PagedList.Mvc.Core.Common.PagedListRenderOptions
            {
                DisplayItemSliceAndTotal = false,
                ContainerDivClasses = new[] { "navigation" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
            })
</div>

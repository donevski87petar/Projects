@model Shop.ViewModels.AppUserViewModel

@{
    ViewData["Title"] = "User Details";
}

    <div class="row">
        <div class="col-12 card">

            <br />

            <h1 class="text-center"><i class="fa fa-lock" aria-hidden="true"></i> User Details</h1>

            <br />

            <table class="table">
                <thead>
                    @Html.HiddenFor(model => model.Id)
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AppRole)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.AppRole)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

<br />

<div class="text-center">
    <a asp-controller="Users" asp-action="AllUsers"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>
</div>



























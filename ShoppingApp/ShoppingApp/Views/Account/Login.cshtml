@using ShoppingApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}



    <div class="cont-div2 text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">


                    <h1>@ViewBag.Title</h1>
                    <h3>Use a local account to log in</h3>


                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div>
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "inpField2" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                <div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "inpField2" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" id="btnLogin" value="Log in" class="inpField2" style="background-color:orange;" />
                                </div>
                            </div>
                            <div>
                                @Html.ActionLink("Register as a new user", "Register")
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}